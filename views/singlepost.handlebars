<link rel="stylesheet" type="text/css" href="/css/jass.css">
<link rel="stylesheet" href="/css/style.css">
<title>The Tech Blog</title>
</head>

<body>
    <header>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                {{#if logged_in}}
                <li><a href="/profile">Profile</a></li>
                {{else}}
                <li><a href="/login">Login</a></li>
                <li><a href="/signup">Sign Up!</a></li>
                {{/if}}
            </ul>
        </nav>
    </header>
    <div class="logo">
        <h1>The Tech Blog</h1>
    </div>
    <main>
        <div class="card">
            <div class="title">
                <h2>{{title}}</h2>
            </div>
            <div class="content">
                <p>{{content}}</p>
            </div>
            <ul>
                {{#each comments as |comment| }}
                <li>
                    <p>{{comment.content}} -{{comment.user.username}}</p>
                </li>
                {{/each}}
            </ul>

            <div class="username">{{user.username}}</div>
        </div>
    </main>
</body>