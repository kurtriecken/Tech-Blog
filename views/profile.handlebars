
    <link rel="stylesheet" type="text/css" href="/css/jass.css">
    <link rel="stylesheet" href="/css/style.css">
    <title>The Tech Blog</title>
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/profile">Profile</a></li>
                <li><a id="logout">Logout</a></li>
            </ul>
        </nav>
    </header>
    <div class="logo">
        <h1>The Tech Blog</h1>
    </div>
    <main>
        <h1>Your posts:</h1>
        {{#each blog_posts as |blog_post| }}
        <div class="card card-bp">
            <a href="/blogpost/{{blog_post.id}}"></a>
            <div class="title"><h2>{{blog_post.title}}</h2></div>
            <div class="content">
                <p>{{blog_post.content}}</p>
            </div>
            {{!-- THIS isnt showing up atm; try to fix before production --}}
            <div class="username">{{username}}</div>
        </div>
        {{/each}}
        <button id="new-post-btn">Create a new post!</button>
    </main>
    <script src="./js/login.js"></script>
    <script src="./js/logout.js"></script>
</body>