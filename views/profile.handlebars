<link rel="stylesheet" type="text/css" href="/css/jass.css">
<link rel="stylesheet" href="/css/style.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<title>The Tech Blog</title>
</head>

<body>
    <header>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/profile">Profile</a></li>
                <li><a style="cursor: pointer;" id="logout">Logout</a></li>
            </ul>
        </nav>
    </header>
    <div class="logo">
        <h1>The Tech Blog</h1>
    </div>
    <main>
        {{!-- <h1>Your posts:</h1> --}}
        <div id="profile-post-list">
            {{#each blog_posts as |blog_post| }}
            <div style="width: 100%">
                <div class="card card-bp">
                    <a id="bp-num-{{blog_post.id}}" href="/"></a>
                    <div class="title">
                        <h2>{{blog_post.title}}</h2>
                    </div>
                    <div class="content">
                        <p>{{blog_post.content}}</p>
                    </div>
                    <div class="username">{{username}}</div>
                </div>
                <button data-id="{{blog_post.id}}"
                class="delete-button">&#128465;</button>
                <button data-id="{{blog_post.id}}" style="background-color: green" 
                class="edit-button fa">&#xf040;</button>
            </div>
            {{/each}}
        </div>

        <br><button id="new-post-btn">Create a new post!</button>
    </main>
    {{!--
    <script src="./js/login.js"></script> --}}
    <script src="/js/logout.js"></script>
    <script src="/js/navnewpost.js"></script>
    <script src="/js/deletepost.js"></script>
</body>