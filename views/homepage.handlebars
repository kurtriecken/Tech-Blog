    <link rel="stylesheet" href="/css/style.css">
    <title>The Tech Blog</title>
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                {{#if logged_in}}
                <li><a href="/profile">Profile</a></li>
                {{else}}
                <li><a href="/login">Login</a></li>
                <li><a href="/signup">Sign Up!</a></li>
                {{/if}}
            </ul>
        </nav>
    </header>
    <div class="logo">
        <h1>The Tech Blog</h1>
    </div>
    <main>
        {{!-- Loop over each blog post in the blogposts array --}}
        {{#each blogposts as |blogpost| }}
        <div class="card">
            <div class="title"><h2>{{blogpost.title}}</h2></div>
            <div class="content">
                <p>{{blogpost.content}}</p>
            </div>
            <div class="username">{{user.username}}</div>
        </div>
        {{/each}}
    </main>
</body>