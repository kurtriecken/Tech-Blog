<body>
    <header>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/profile">Profile</a></li>
                {{#if logged_in}}
                <li><a style="cursor: pointer;" id="logout">Logout</a></li>
                {{else}}
                <li><a href="/login">Login</a></li>
                <li><a href="/signup">Sign Up!</a></li>
                {{/if}}
            </ul>
        </nav>
    </header>
    <div class="logo">
        <h1>Tech Blog</h1>
    </div>
    <main>
        {{!-- Loop over each blog post in the blogposts array --}}
        {{#each blog_posts as |blog_post| }}
        <div class="card card-bp">
            <a href="/blogpost/{{blog_post.id}}"></a>
            <div class="title"><h2>{{blog_post.title}}</h2></div>
            <div class="content">
                <p>{{blog_post.content}}</p>
            </div>
            <div class="username">{{user.username}} -- {{blog_post.date_created}}</div>
            {{!-- <div>{{user.email}}</div> --}}
        </div>
        {{/each}}
    </main>
    <script src="/js/logout.js"></script>
</body>